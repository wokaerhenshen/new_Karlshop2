@model IEnumerable<new_Karlshop.Data.Goods>

@{
    ViewBag.Title = "Goods";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Goods</h2>

<p>
    @Html.ActionLink("Create New", "GoodsCreate", "Admin", new { area = "" }, new { @class = "btn btn-default btn-sm" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cat_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.goods_id)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.goods_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.shop_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.market_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.goods_quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sold_quantity)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.last_update)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td  align="center" class="col-xs-12 col-sm-1">
            @Html.DisplayFor(modelItem => item.cat_id)
        </td>
        <td  align="center" class="col-xs-12 col-sm-1">
            @Html.DisplayFor(modelItem => item.goods_id)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.goods_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.shop_price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.market_price)
        </td>
        <td align="center" class="col-xs-12 col-sm-1">
            @Html.DisplayFor(modelItem => item.goods_quantity)
        </td>
        <td align="center" class="col-xs-12 col-sm-1">
            @Html.DisplayFor(modelItem => item.sold_quantity)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.last_update)
        </td>
        <td>
            @Html.ActionLink("Edit", "GoodsEdit", new { controller = "Admin", id =item.goods_id }) |
            @Html.ActionLink("Delete", "GoodsDelete", new { controller = "Admin", id =item.goods_id })
        </td>
    </tr>
}

</table>
